<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/state_btn1"
        android:text="打开第一个活动窗口"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/state_btn2"
        android:text="打开第二个活动窗口"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/state_btn3"
        android:text="打开第三个弹框窗口"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/state_btn4"
        android:text="打开一个fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/state_btn5"
        android:text="保存数据到SharedPreferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/state_btn6"
        android:text="获取数据从SharedPreferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/state_et2"
        android:hint="this is 错误提示框"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
